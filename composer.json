{
    "name": "honeybee/trellis",
    "type": "library",
    "description": "Library for handling entities and value-objects.",
    "keywords": ["entity", "dto", "value-object", "vo" ],
    "homepage": "https://github.com/honeybee/trellis",
    "license": "MIT",
    "authors": [
        {
            "name": "Thorsten Schmitt-Rink",
            "email": "schmittrink@gmail.com"
        },
        {
            "name": "Steffen Gransow"
        },
        {
            "name": "Igor Pellegrini"
        },
        {
            "name": "Hasham Ahmad"
        }
    ],
    "prefer-stable": true,
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.6.1",
        "ramsey/uuid": "~3.4",
        "equip/structure": "~1.1",
        "twig/twig": "~1.23",
        "jms/parser-lib": "~1.0",
        "beberlei/assert": "~2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.4",
        "satooshi/php-coveralls": "master@dev",
        "squizlabs/php_codesniffer": "~2.6",
        "sami/sami": "~3.2"
    },
    "autoload": {
        "psr-4": { "Trellis\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Trellis\\Tests\\" : "tests/" }
    },
    "scripts": {
        "test": "phpunit",
        "psr2": "phpcs --extensions=php --standard=psr2 ./src/ ./tests",
        "docs": "sami.php --ansi update config/sami.php"
    }
}