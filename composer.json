{
    "name": "honeybee/trellis",
    "type": "library",
    "description": "Entity schema lib for php.",
    "keywords": ["entity", "dto", "value object"],
    "homepage": "https://github.com/honeybee/trellis",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/honeybee/trellis/issues",
        "wiki": "https://github.com/honeybee/trellis/wiki",
        "irc": "irc://irc.freenode.org/honeybee",
        "source": "https://github.com/honeybee/trellis"
    },
    "prefer-stable": true,
    "config": {
        "vendor-dir": "vendor"
    },
    "require": {
        "php": "^7.1",
        "honeybee/frames": "master@dev",
        "ramsey/uuid": "~3.6",
        "jms/parser-lib": "~1.0",
        "beberlei/assert": "~2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5",
        "squizlabs/php_codesniffer": "2.8",
        "satooshi/php-coveralls": "master@dev"
    },
    "autoload": {
        "psr-4": { "Trellis\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Trellis\\Tests\\" : "tests/" }
    },
    "archive": {
        "exclude": [
            "/tests",
            "/build",
            "/vendor"
        ]
    },
    "scripts": {
        "build": [
            "@test",
            "@code-sniffer",
            "@validate-json"
        ],
        "test": "phpunit",
        "code-sniffer": "phpcs --extensions=php --standard=psr2 src tests",
        "code-sniffer-autofix": "phpcbf --standard=psr2 -d tabWidth=4 src",
        "validate-json": "composer validate --no-check-all --no-check-lock",
        "validate-deps": "composer validate --with-dependencies --strict"
    }
}
