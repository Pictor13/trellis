{
    "name": "honeybee/trellis",
    "type": "library",
    "bin": [ "bin/trellis" ],
    "description": "Library for generating entities, that enforce data validity according to a specific schema.",
    "keywords": ["entity", "validation", "dto"],
    "homepage": "https://github.com/honeybee/trellis",
    "license": "MIT",
    "authors": [
        {
            "name": "Thorsten Schmitt-Rink"
        },
        {
            "name": "Steffen Gransow"
        },
        {
            "name": "Igor Pellegrini"
        },
        {
            "name": "Hasham Ahmad"
        }
    ],
    "prefer-stable": true,
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.5.0",
        "beberlei/assert": "2.4",
        "egulias/email-validator": "1.2.*",
        "fzaninotto/faker": "1.5.*",
        "mtdowling/jmespath.php": "2.2.*",
        "ramsey/uuid": "2.8.*",
        "symfony/console": "2.7.*",
        "symfony/filesystem": "2.7.*",
        "twig/twig": "1.21.*"
    },
    "require-dev": {
        "phpunit/phpunit": "4.8.*",
        "phpmd/phpmd": "2.2.*",
        "squizlabs/php_codesniffer": "2.3.*",
        "mockery/mockery": "0.9.*",
        "satooshi/php-coveralls": "0.6.*",
        "sami/sami": "3.0.*"
    },
    "autoload": {
        "psr-4": { "Trellis\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Trellis\\Tests\\" : "tests/" }
    },
    "scripts": {
        "test": [
            "echo \"\nRunning unit tests ...\n\"",
            "./vendor/bin/phpunit tests"
        ],
        "code-sniffer": [
            "echo \"\nRunning codesniffer to check for PSR-2 compatibility ...\n\"",
            "./vendor/bin/phpcs --extensions=php --standard=psr2 ./src/ ./tests"
        ],
        "api-doc": [
            "echo \"\nRunning Sami to generate docs ...\n\"",
            "if [ -d ./build/docs ]; then rm -rf ./build/docs; fi",
            "vendor/sami/sami/sami.php --ansi update config/sami.php"
        ],
        "build": [
            "if [ -d ./build/logs ]; then rm -rf ./build/logs; fi",
            "mkdir -p ./build/logs",
            "./bin/composer.phar test",
            "./bin/composer.phar code-sniffer"
        ]
    }
}
